@model IEnumerable<Models.Role>

@{
	string title = "Roles List";
	ViewBag.Title = title;
}

<h2>@(title)</h2>

<div class="row">
	<div class="col-xs-12">
		@Html.ActionLink("Create New Role", MVC.Roles.Create())
		|
		@Html.ActionLink("Home", MVC.Home.Index())

	</div>
</div>

<div class="row">
	<div class="col-xs-12 table-responsive">
		<table class="table table-bordered table-condensed table-striped table-hover" style="background-color:#acacac;">
			<tr>
				<th></th>
				<th></th>
				<th>
					@Html.DisplayNameFor(model => model.IsActive)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
			</tr>
			@{
				int rowIndex = 0;
				foreach (var item in Model)
				{
					rowIndex++;

					<tr>
						<td>@rowIndex</td>
						<td>
							@Html.ActionLink("Details", MVC.Roles.Details(item.Id))
							|
							@Html.ActionLink("Edit", MVC.Roles.Edit(item.Id))
							|
							@Html.ActionLink("Delete", MVC.Roles.Delete(item.Id))
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.IsActive)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
					</tr>
				}
			}
		</table>
	</div>
</div>
