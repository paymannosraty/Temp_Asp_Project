@model Models.Role

@{
	string title = "Delete Role";
	ViewBag.Title = title;
}

<h2>@(title)</h2>

<h3>Are you sure you want to delete this?</h3>

<hr />


<div class="row">
	<div class="col-xs-3">
		@Html.DisplayNameFor(model => model.IsActive)
	</div>
	<div class="col-xs-9">
		@Html.DisplayFor(model => model.IsActive)
	</div>
</div>

<div class="row">
	<div class="col-xs-3">
		@Html.DisplayNameFor(model => model.Name)
	</div>
	<div class="col-xs-9">
		@Html.DisplayFor(model => model.Name)
	</div>
</div>

<div class="row">
	<div class="col-xs-offset-3 col-xs-9">
		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<button type="submit" class="btn btn-danger">Delete</button>
		}
	</div>
</div>

<div class="row">
	<div class="col-xs-12">
		@Html.ActionLink("Details", MVC.Roles.Details(Model.Id))
		|
		@Html.ActionLink("Edit", MVC.Roles.Edit(Model.Id))
		|
		@Html.ActionLink("Back to List", MVC.Roles.Index())
	</div>
</div>
